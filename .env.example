# .env.example
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_APP=run.py
FLASK_CONFIG=development
FLASK_DEBUG=1
SECRET_KEY="your-flask-secret-key-here"
REFRESH_SECRET_KEY="your-refresh-secret-key-here"

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID="your-google-oauth-client-id.apps.googleusercontent.com"
GOOGLE_OAUTH_CLIENT_SECRET="your-google-oauth-client-secret"
OAUTHLIB_INSECURE_TRANSPORT=1  # Only for development

# Google Cloud Platform
GCP_PROJECT_ID="your-gcp-project-id"
FIREBASE_SECRET_NAME="firebase-admin-sdk-json"
FIREBASE_STORAGE_BUCKET="your-project.firebasestorage.app"

# Background Tasks
TASK_AUTH_TOKEN="your-task-auth-token"

# Admin Access (comma-separated email addresses)
ADMIN_EMAILS="admin@example.com,another-admin@example.com"

# Email Configuration (for support ticket replies)
# SECURE: Credentials are stored in Google Secret Manager in production
# For development only, you can use environment variables:
MAIL_SERVER="smtp.gmail.com"
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
# MAIL_USERNAME="your-email@gmail.com"  # Only for development - use Secret Manager in prod
# MAIL_PASSWORD="your-app-password"     # Only for development - use Secret Manager in prod
MAIL_DEFAULT_SENDER="willmusolf@gmail.com"

# Optional - Scalability Configuration
USE_FIRESTORE_CACHE=false
CACHE_TTL_HOURS=24
USER_CACHE_TTL_MINUTES=30
MAX_DB_CONNECTIONS=15
MONITORING_ENABLED=true

# Optional - Development
PORT=5001